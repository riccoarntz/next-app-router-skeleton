import type { RefObject } from 'react';
import { fadeTo, fadeFromTo } from 'util/animation/fade/fade';

interface {{pascalCase componentName}}Refs {
  elementRef: RefObject<HTMLDivElement>;
}

export function setupTransitionInTimeline(
  timeline: gsap.core.Timeline,
  { elementRef }: {{pascalCase componentName}}Refs,
): void {
  timeline.add(fadeFromTo(elementRef.current as HTMLElement) as gsap.core.Timeline);
}

export function setupTransitionOutTimeline(
  timeline: gsap.core.Timeline,
  { elementRef }: {{pascalCase componentName}}Refs,
): void {
  timeline.add(fadeTo(elementRef.current as HTMLElement) as gsap.core.Timeline);
